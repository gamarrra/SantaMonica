@model List<ProductosDto>
<!DOCTYPE html>
<html lang="en">

<head>
    <title>CSS Template</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
    <div class="content">
        <table class="table">
            <tr>
                <th>Imagen</th>
                <th>Nombre</th>
                <th>Marca</th>
                <th>Detalle</th>
                <th>Tipo de Producto</th>
                <th></th>
            </tr>

            @foreach (var prod in Model)
            {
                <tr>
                    <td>
                        <img src='@Url.Content("~/img/"  + @prod.FotoRuta)' class="square"
                            style="width: 70px;height:70px;" />
                    </td>
                    <td>@prod.Nombre</td>
                    <td>@prod.Marca</td>
                    <td>@prod.Detalle</td>
                    <td>@prod.TipoProductoNombre</td>
                    <td>
                        @Html.ActionLink("Eliminar", "Eliminar",new { id=prod.Id })
                        @Html.ActionLink("Editar", "Editar",new { id=prod.Id })
                    </td>
                </tr>
            }
        </table>
    </div>
</body>

</html>
